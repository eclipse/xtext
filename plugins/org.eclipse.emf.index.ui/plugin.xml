   <extension
         point="org.eclipse.ui.startup">
      <startup
            class="org.eclipse.emf.index.ui.GuiceExecutableExtensionFactory:org.eclipse.emf.index.ui.builder.IndexStartupInitializer">
      </startup>
   </extension>
   -->
</plugin>

<?xml version="1.0"?>
<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.eclipse.xtext</groupId>
		<artifactId>org.eclipse.xtext.tycho.parent</artifactId>
		<version>2.15.0-SNAPSHOT</version>
		<relativePath>../org.eclipse.xtext.tycho.parent</relativePath>
	</parent>

	<packaging>pom</packaging>
	<artifactId>org.eclipse.xtext.target</artifactId>

	<build>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>build-helper-maven-plugin</artifactId>
				<executions>
					<execution>
						<id>attach-artifacts</id>
						<phase>package</phase>
						<goals>
							<goal>attach-artifact</goal>
						</goals>
						<configuration>
							<artifacts>
								<artifact>
									<file>${project.artifactId}-luna.target</file>
									<type>target</type>
									<classifier>${project.artifactId}-luna</classifier>
								</artifact>
								<artifact>
									<file>${project.artifactId}-oxygen.target</file>
									<type>target</type>
									<classifier>${project.artifactId}-oxygen</classifier>
								</artifact>
								<artifact>
									<file>${project.artifactId}-photon.target</file>
									<type>target</type>
									<classifier>${project.artifactId}-photon</classifier>
								</artifact>
							</artifacts>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>

<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<parent>
		<groupId>org.eclipse.xtext</groupId>
		<artifactId>org.eclipse.xtext.standalone.parent</artifactId>
		<version>2.6.0-SNAPSHOT</version>
		<relativePath>../org.eclipse.xtext.standalone.parent</relativePath>
	</parent>
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.eclipse.xtend</groupId>
	<artifactId>org.eclipse.xtend.core</artifactId>
	<name>Xtend Core Library</name>
	<packaging>jar</packaging>
	<properties>
		<scripts.dir>${project.parent.relativePath}</scripts.dir>
	</properties>
	<build>
		<plugins>
			<plugin>
				<groupId>org.eclipse.tycho.extras</groupId>
				<artifactId>tycho-p2-extras-plugin</artifactId>
				<configuration>
					<source>
						<!-- source repositories to mirror from -->
						<repository>
							<id>xtext</id>
							<layout>p2</layout>
							<url>${xtext-url}</url>
						</repository>
					</source>
					<ius>
						<iu>
							<id>org.eclipse.xtend.core</id>
						</iu>
						<!-- Sources -->
						<iu>
							<id>org.eclipse.xtend.core.source</id>
						</iu>
					</ius>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-assembly-plugin</artifactId>
			</plugin>
		</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>org.eclipse.xtext</groupId>
			<artifactId>org.eclipse.xtext.xbase</artifactId>
			<version>[${project.version}]</version>
		</dependency>
		<dependency>
			<groupId>org.eclipse.xtend</groupId>
			<artifactId>org.eclipse.xtend.lib</artifactId>
			<version>[${project.version}]</version>
		</dependency>
		<dependency>
			<groupId>org.eclipse.equinox</groupId>
			<artifactId>common</artifactId>
			<version>[3.5,)</version>
		</dependency>
	</dependencies>
</project>
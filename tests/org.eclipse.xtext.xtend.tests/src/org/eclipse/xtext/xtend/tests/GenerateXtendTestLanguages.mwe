<workflow>
	<property name="projectName" value="org.eclipse.xtext.xtend.tests"/>
	<property name="runtimeProject" value="../${projectName}"/>
	
	<bean class="org.eclipse.emf.mwe.utils.StandaloneSetup" platformUri="${runtimeProject}/.."/>
	<component class="org.eclipse.emf.mwe.utils.DirectoryCleaner" directory="${runtimeProject}/src-gen"/>
	
	<property name="enums.genmodel" value="platform:/resource/org.eclipse.xtext.generator.tests/src/org/eclipse/xtext/enumrules/enums.genmodel"/>
	
	<component class="org.eclipse.xtext.generator.Generator">
		<pathRtProject value="${runtimeProject}"/>
		<pathUiProject value="${runtimeProject}"/>
		<projectNameRt value="${projectName}"/>
		<activator value="org.eclipse.xtext.xtend.XtendTestsActivator"/>
		
		<language uri="classpath:/org/eclipse/xtext/XtextGrammarTestLanguage.xtext">
			<fragment file="org/eclipse/xtext/xtend/tests/XtendSetup.mwe"/>
		</language>
		<language uri="classpath:/org/eclipse/xtext/parser/keywords/KeywordsTestLanguage.xtext">
			<fragment file="org/eclipse/xtext/xtend/tests/XtendSetup.mwe"/>
		</language>
		<language uri="classpath:/org/eclipse/xtext/testlanguages/ContentAssistTestLanguage.xtext">
			<fragment file="org/eclipse/xtext/xtend/tests/XtendSetup.mwe"/>
		</language>
		<language uri="classpath:/org/eclipse/xtext/testlanguages/ReferenceGrammarTestLanguage.xtext">
			<fragment file="org/eclipse/xtext/xtend/tests/XtendSetup.mwe"/>
		</language>
		<language uri="classpath:/org/eclipse/xtext/testlanguages/TreeTestLanguage.xtext">
			<fragment file="org/eclipse/xtext/xtend/tests/XtendSetup.mwe"/>
		</language>
		<language uri="classpath:/org/eclipse/xtext/enumrules/EnumRulesTestLanguage.xtext">
			<fragment file="org/eclipse/xtext/xtend/tests/XtendSetup.mwe" genModels="${enums.genmodel}"/>
		</language>
	</component>
</workflow>
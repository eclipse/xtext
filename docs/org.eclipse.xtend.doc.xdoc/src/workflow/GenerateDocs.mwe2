module GenerateSpec

import org.eclipse.emf.mwe.utils.*
var projectDir = "."
var targetDir = "${projectDir}/../../xtend.website.generator/website/documentation/2.7.0"
var modelPath = "${projectDir}/xdoc"

Workflow {
	bean = workflow.Headless {}
	component = @workflow.XDocGenerator { 
		// or define search scope explicitly
		modelPath = modelPath
		targetDir = targetDir
		document = "Xtend User Guide"
		pdfLatex = "/opt/local/bin/pdflatex"
		release = true
	}

}

<?xml version="1.0" encoding="UTF-8"?>
<project name="org.eclipse.xtext.runtime.source" default="build.jars" basedir=".">

	<property name="basews" value="${ws}"/>
	<property name="baseos" value="${os}"/>
	<property name="basearch" value="${arch}"/>
	<property name="basenl" value="${nl}"/>
	<property name="bundleId" value="org.eclipse.xtext.runtime.source"/>
	<property name="bundleVersion" value="0.7.0.200811051404"/>

	<!-- Compiler settings. -->
	<property name="javacFailOnError" value="false"/>
	<property name="javacDebugInfo" value="on"/>
	<property name="javacVerbose" value="false"/>
	<property name="logExtension" value=".log"/>
	<property name="compilerArg" value=""/>
	<property name="javacSource" value="1.3"/>
	<property name="javacTarget" value="1.2"/>
	<condition property="dir_bootclasspath" value="${java.home}/../Classes">
		<os family="mac"/>
	</condition>
	<property name="dir_bootclasspath" value="${java.home}/lib"/>
	<path id="path_bootclasspath">
		<fileset dir="${dir_bootclasspath}">
			<include name="*.jar"/>
		</fileset>
	</path>
	<property name="bootclasspath" refid="path_bootclasspath"/>
	<property name="bundleJavacSource" value="${javacSource}"/>
	<property name="bundleJavacTarget" value="${javacTarget}"/>
	<property name="bundleBootClasspath" value="${bootclasspath}"/>

	<target name="init" depends="properties">
<condition property="pluginTemp" value="${buildTempFolder}/plugins"		>
			<isset property="buildTempFolder"/>
		</condition>
		<property name="pluginTemp" value="${basedir}"/>
<condition property="build.result.folder" value="${pluginTemp}/org.eclipse.xtext.runtime.source_0.7.0.200811051404"		>
			<isset property="buildTempFolder"/>
		</condition>
		<property name="build.result.folder" value="${basedir}"/>
		<property name="temp.folder" value="${basedir}/temp.folder"/>
		<property name="plugin.destination" value="${basedir}"/>
	</target>

	<target name="properties" if="eclipse.running">
		<property name="build.compiler" value="org.eclipse.jdt.core.JDTCompilerAdapter"/>

	</target>

	<target name="build.update.jar" depends="init" description="Build the plug-in: org.eclipse.xtext.runtime.source for an update site.">
		<delete dir="${temp.folder}"/>
		<mkdir dir="${temp.folder}"/>
		<antcall target="build.jars"/>
		<antcall target="gather.bin.parts">
			<param name="destination.temp.folder" value="${temp.folder}/"/>
		</antcall>
		<jar destfile="${plugin.destination}/org.eclipse.xtext.runtime.source_0.7.0.200811051404.jar" basedir="${temp.folder}/org.eclipse.xtext.runtime.source_0.7.0.200811051404" filesetmanifest="merge"/>
		<delete dir="${temp.folder}"/>
	</target>
	<target name="build.jars">
		<ant antfile="build.xml" dir="../../../org.eclipse.xtext.log4j" target="build.sources"/>
		<ant antfile="build.xml" dir="../../../org.eclipse.xtext.log4j" target="gather.sources">
			<property name="destination.temp.folder" value="${basedir}/src"/>
		</ant>
		<ant antfile="build.xml" dir="../../../org.eclipse.xtext.service.ui" target="build.sources"/>
		<ant antfile="build.xml" dir="../../../org.eclipse.xtext.service.ui" target="gather.sources">
			<property name="destination.temp.folder" value="${basedir}/src"/>
		</ant>
		<ant antfile="build.xml" dir="../../../org.eclipse.xtext.ui.builtin" target="build.sources"/>
		<ant antfile="build.xml" dir="../../../org.eclipse.xtext.ui.builtin" target="gather.sources">
			<property name="destination.temp.folder" value="${basedir}/src"/>
		</ant>
		<ant antfile="build.xml" dir="../../../org.eclipse.xtext.service" target="build.sources"/>
		<ant antfile="build.xml" dir="../../../org.eclipse.xtext.service" target="gather.sources">
			<property name="destination.temp.folder" value="${basedir}/src"/>
		</ant>
		<ant antfile="build.xml" dir="../../../org.eclipse.xtext" target="build.sources"/>
		<ant antfile="build.xml" dir="../../../org.eclipse.xtext" target="gather.sources">
			<property name="destination.temp.folder" value="${basedir}/src"/>
		</ant>
		<ant antfile="build.xml" dir="../../../org.eclipse.xtext.generator" target="build.sources"/>
		<ant antfile="build.xml" dir="../../../org.eclipse.xtext.generator" target="gather.sources">
			<property name="destination.temp.folder" value="${basedir}/src"/>
		</ant>
		<ant antfile="build.xml" dir="../../../org.eclipse.xtext.ui.common" target="build.sources"/>
		<ant antfile="build.xml" dir="../../../org.eclipse.xtext.ui.common" target="gather.sources">
			<property name="destination.temp.folder" value="${basedir}/src"/>
		</ant>
		<ant antfile="build.xml" dir="../../../org.eclipse.xtext.ui.core" target="build.sources"/>
		<ant antfile="build.xml" dir="../../../org.eclipse.xtext.ui.core" target="gather.sources">
			<property name="destination.temp.folder" value="${basedir}/src"/>
		</ant>
		<ant antfile="build.xml" dir="../../../org.eclipse.xtext.doc" target="build.sources"/>
		<ant antfile="build.xml" dir="../../../org.eclipse.xtext.doc" target="gather.sources">
			<property name="destination.temp.folder" value="${basedir}/src"/>
		</ant>
		<ant antfile="build.xml" dir="../../../org.eclipse.xtext.util" target="build.sources"/>
		<ant antfile="build.xml" dir="../../../org.eclipse.xtext.util" target="gather.sources">
			<property name="destination.temp.folder" value="${basedir}/src"/>
		</ant>
		<ant antfile="build.xml" dir="../../../org.eclipse.xtext.xtext.ui" target="build.sources"/>
		<ant antfile="build.xml" dir="../../../org.eclipse.xtext.xtext.ui" target="gather.sources">
			<property name="destination.temp.folder" value="${basedir}/src"/>
		</ant>
		<ant antfile="build.xml" dir="../../../org.eclipse.xtext.logging" target="build.sources"/>
		<ant antfile="build.xml" dir="../../../org.eclipse.xtext.logging" target="gather.sources">
			<property name="destination.temp.folder" value="${basedir}/src"/>
		</ant>
		<ant antfile="build.xml" dir="../../../org.antlr.runtime" target="build.sources"/>
		<ant antfile="build.xml" dir="../../../org.antlr.runtime" target="gather.sources">
			<property name="destination.temp.folder" value="${basedir}/src"/>
		</ant>
	</target>
	<target name="build.sources">
	</target>

	<target name="gather.bin.parts" depends="init" if="destination.temp.folder">
		<mkdir dir="${destination.temp.folder}/org.eclipse.xtext.runtime.source_0.7.0.200811051404"/>
		<copy todir="${destination.temp.folder}/org.eclipse.xtext.runtime.source_0.7.0.200811051404" failonerror="true" overwrite="false">
			<fileset dir="${basedir}">
				<include name="plugin.xml"/>
				<include name="src/**"/>
				<include name="META-INF/MANIFEST.MF"/>
			</fileset>
		</copy>
		<eclipse.versionReplacer path="${destination.temp.folder}/org.eclipse.xtext.runtime.source_0.7.0.200811051404" version="0.7.0.200811051404"/>
	</target>

	<target name="build.zips" depends="init">
	</target>

	<target name="gather.sources" depends="init" if="destination.temp.folder">
		<antcall target="copy.src.includes">
			<param name="source.destination.folder" value="${destination.temp.folder}/org.eclipse.xtext.runtime.source_0.7.0.200811051404"/>
		</antcall>
	</target>

	<target name="gather.individual.sources" depends="init">
		<antcall target="copy.src.includes">
			<param name="source.destination.folder" value="${destination.temp.folder}"/>
		</antcall>
	</target>

	<target name="copy.src.includes" depends="init">
	</target>

	<target name="gather.logs" depends="init" if="destination.temp.folder">
	</target>

	<target name="clean" depends="init" description="Clean the plug-in: org.eclipse.xtext.runtime.source of all the zips, jars and logs created.">
		<delete file="${plugin.destination}/org.eclipse.xtext.runtime.source_0.7.0.200811051404.jar"/>
		<delete file="${plugin.destination}/org.eclipse.xtext.runtime.source_0.7.0.200811051404.zip"/>
		<delete dir="${temp.folder}"/>
	</target>

	<target name="refresh" depends="init" if="eclipse.running" description="Refresh this folder.">
		<eclipse.convertPath fileSystemPath="/Users/huebner/Entwicklung/workspace-oaw5/org.eclipse.xtext.sdk.feature/plugins/org.eclipse.xtext.runtime.source" property="resourcePath"/>
		<eclipse.refreshLocal resource="${resourcePath}" depth="infinite"/>
	</target>

	<target name="zip.plugin" depends="init" description="Create a zip containing all the elements for the plug-in: org.eclipse.xtext.runtime.source.">
		<delete dir="${temp.folder}"/>
		<mkdir dir="${temp.folder}"/>
		<antcall target="build.jars"/>
		<antcall target="build.sources"/>
		<antcall target="gather.bin.parts">
			<param name="destination.temp.folder" value="${temp.folder}/"/>
		</antcall>
		<antcall target="gather.sources">
			<param name="destination.temp.folder" value="${temp.folder}/"/>
		</antcall>
		<delete>
			<fileset dir="${temp.folder}">
				<include name="**/*.bin${logExtension}"/>
			</fileset>
		</delete>
		<zip destfile="${plugin.destination}/org.eclipse.xtext.runtime.source_0.7.0.200811051404.zip" basedir="${temp.folder}" filesonly="true" whenempty="skip" update="false"/>
		<delete dir="${temp.folder}"/>
	</target>

</project>
